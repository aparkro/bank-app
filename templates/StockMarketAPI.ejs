<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yahoo Finance API Example</title>
</head>
<body>
    <h1>Yahoo Finance API Data</h1>
    <div id="news"></div>

    <script>
        const url = 'https://yahoo-finance166.p.rapidapi.com/api/news/list-by-symbol?s=AAPL%2CGOOGL%2CTSLA&region=US&snippetCount=500';
        const options = {
            method: 'GET',
            headers: {
                'x-rapidapi-key': '1d5d960c3bmsh1931ede658491a3p110c99jsnb960fd8ad0ca', // Replace with your API key
                'x-rapidapi-host': 'yahoo-finance166.p.rapidapi.com'
            }
        };

        async function fetchNews() {
            try {
                const response = await fetch(url, options);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const result = await response.json(); // Parse JSON instead of text
                console.log(result); // Log the result for debugging

                // Display the news in the HTML
                const newsContainer = document.getElementById('news');
                result.items.result.forEach(item => {
                    const newsItem = document.createElement('div');
                    newsItem.innerHTML = `<h2>${item.title}</h2><p>${item.summary}</p>`;
                    newsContainer.appendChild(newsItem);
                });
            } catch (error) {
                console.error('Error fetching news:', error);
            }
        }

        // Run the function after DOM is loaded
        document.addEventListener('DOMContentLoaded', fetchNews);
    </script>
</body>
</html>
